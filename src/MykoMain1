	public static void main(String[] args) throws InterruptedException {

		Scanner sc = new Scanner(System.in);
		String foo;
		int fooInt;
		int money;
		String optionS = ""; 
		int option = 0;
		String buyOptionS = ""; 
		int buyOption = 0;
		int exit = 0;
		String name = "";
		int amount = 0;
		int pNumber = 0;
		String thisLine = "";
		String path = "Turboelektro.txt";
		
		
		
		try {

			File file = new File(path);

			if (file.createNewFile()) {
				System.out.println("File created.");
			} else {
				System.out.println("");
			}

		} catch (IOException e) {
			e.printStackTrace();
		}
		
		// JUST FOR FUN

		System.out.printf("Loading shop.");
		TimeUnit.SECONDS.sleep(1);
		System.out.printf(".");
		TimeUnit.SECONDS.sleep(1);
		System.out.printf(".");

		// ****************
		// Shop starts here
		// ****************

		do {
			 option = 0;
			menuShow();
		while (option == 0){
			System.out.println("Choose from the list above.");
			optionS = sc.next();
			try {
				option = Integer.parseInt(optionS);
			} catch (NumberFormatException e) {
				
			}
		}
			switch (option) {
			case 1: reader(path);
				break;
			
			case 2:
				System.out.println("1. Add to an existing product");
				System.out.println("2. Add new product");

				buyOptionS = sc.next();
				try {
					buyOption = Integer.parseInt(buyOptionS);
				} catch (NumberFormatException e) {

				}
				
				switch (buyOption) { // second switch
				case 1:
					System.out.println("Choose the product number.");
					
					reader(path);	
					
					try{
					pNumber = sc.nextInt();
					}catch (InputMismatchException e){
						System.out.println("Wrong input.");
					}
					System.out.println("Set how much to add.");
					amount = sc.nextInt();
					
					amount = amount + buyEx(pNumber, path);
					System.out.println(amount);
					
					break;
				case 2:
					System.out.println("Set product name.");
					
					break;

				default:
					System.out.println("Wrong input.");
					break;
				}
				// end of second switch
				break;
			case 3:
				System.out.println("Udner construction.");
				break;
			case 4:
				System.out.println("Udner construction.");
				break;
			case 5:
				System.out.println("Udner construction.");
				break;
			case 6:
				exit++;
				break;

			default:
				System.out.println("Choose from the list below.");
				break;
			}
			
		} while (exit == 0);
	}
