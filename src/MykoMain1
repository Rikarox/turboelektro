	public static void menuShow() {
		line();

		System.out.println("1. Products info");
		System.out.println("2. Buy products");
		System.out.println("3. Sell products");
		System.out.println("4. Settings");
		System.out.println("5. Credits");
		System.out.println("6. Exit");
	}

	public static void line() {
		System.out.println("");
		System.out.println("");
		System.out.println("_______________________________________");
		// decodeRX5();
		// money = foo;
		// companyName zo suboru compname, money zo suboru compmoney
		System.out.println("Money: " + "Shop Name: ");
		System.out.println();
	}

	public static void reader(String PATH){
		try {
			String thisLine = "";
			String path = PATH;
			BufferedReader br = new BufferedReader(new FileReader(path));
			while ((thisLine = br.readLine()) != null) {
				thisLine = thisLine.replace("*"," ");
				thisLine = thisLine.replace("#"," ");
				
				System.out.println(thisLine);
			}
		} catch (Exception e) {
			e.printStackTrace();
		}
	}
	
	public static int buyEx(int pNumber, String path){
		
		String a = "";
		String thisLine="";
		int getAmount = 0;
		int amount = 0;
		
		try (BufferedWriter bw = new BufferedWriter(new FileWriter(path, true))) {
		
			
			
			try {
			
			BufferedReader br = new BufferedReader(new FileReader(path));
				for(int i = 0; i < pNumber; i++){
				thisLine = br.readLine();}
				
				
				
				for (int i = 0; i < thisLine.length(); i++) {
					char c = thisLine.charAt(i);
					
					if (c == '#') {
						getAmount ++;
					}
					
					if (getAmount == 1){
						if(c == '#'){}
						else{
						a = a +	Character.toString(c);
						}
					}
				
				}
				try {
					amount = Integer.parseInt(a);
					
					
				} catch (NumberFormatException e) {
					System.out.println("NumberFormatException");
					
				}
			
		} catch (Exception e) {
			e.printStackTrace();
		}
			
		
		}

		catch (IOException e) {
			e.printStackTrace();
		}
		
		return amount;
	}
